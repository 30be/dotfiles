# Lines translated from zshrc
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000

alias ls='ls --color=auto'
alias l="ls -lha"

# 'gem' function translated to bash
gem() {
  proxychains -q gemini
}
flash() {
  proxychains -q gemini -m "gemini-2.5-flash" "$@"
}
# The commented-out 'nvim' function is kept commented out in bash.
# function nvim() {
#      proxychains4 /usr/bin/nvim "$@"
# }

PATH="$HOME/bin:$PATH"
PATH="$HOME/.ghcup/bin:$PATH"
PATH="$HOME/.local/bin:$PATH"

# Bash doesn't use a 'plugins' array like Zsh frameworks (oh-my-zsh/prezto).
# You'd load equivalent features (like git/syntax-highlighting) differently.
# zsh-syntax-highlighting has no simple bash counterpart to include here,
# you'd typically install and source a separate script for bash.

export EDITOR=nvim
export PS1='\[\e[32m\]\W \$ \[\e[0m\]'

# 'yay' function translated to bash
yay() {
  command yay "$@"
  pacman -Qe >~/.packages
}
chaddr() {
  sudoedit /usr/local/etc/xray/config.json
  sudo systemctl restart xray
}
shopt -s autocd
ce() {
  touch "$@"
  chezmoi add "$@"
  chezmoi edit "$@"
  chezmoi apply
}
alias tt='taskwarrior-tui'
alias push="git add -A; git commit -m 'something'; git push"
alias msg="notify-send -u critical"
eval "$(direnv hook bash)"

export ANDROID_HOME=$HOME/Android/Sdk
mkdir -p $ANDROID_HOME
ghcjs() { 
  javascript-unknown-ghcjs-ghc -O2
  rm -rf "$1".jsexe "$1".o "$1".hi 
}
